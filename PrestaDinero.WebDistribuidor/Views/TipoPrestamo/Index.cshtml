@model List<PrestaDinero.Core.TipoPrestamoEntity>

<div class="content-wrapper swalDefaultSuccess">

    <section class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">

                </div>
                <div class="col-sm-6">

                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>


    <section class="content">
        <div class="container">



            <div class="row">
                <div class="col-12">

                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">Tipo prestamo</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">


                            <div class="col-12  mb-4 text-right">
                               
                                    <a type="button" class="btn  btn-success" asp-action="Create" asp-controller="TipoPrestamo"><i class="fa fa-plus"></i> <span class="ml-2">Nuevo</span> </a>
                                   
                          
                            </div>

                            <div class=" table-responsive p-0">
                                <table class="table table-hover text-nowrap">
                                    <thead>
                                        <tr>
                                            <th>@Html.DisplayNameFor(item => item.FirstOrDefault().Nombre)</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @if (Model != null)
                                        {
                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@Html.DisplayFor(Items => item.Nombre)</td>
                                                    <td class="text-right  py-0 align-middle">
                                                        <div class="btn-group btn-group-sm ">
                                                            <a href="#" class="btn btn-info"><i class="fas fa-eye"></i></a>
                                                            <a asp-action="Create" asp-controller="TipoPrestamo" asp-route-id="@item.IdTipoPrestamo" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                                                          
                                                        </div>
                                                    </td>
                                                </tr>
                                            }

                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>

                </div>
            </div>
        </div>
    </section>

</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

   
    <script src="~/adminlte/plugins/sweetalert2/sweetalert2.min.js"></script>


    <script>
        
        $(function () {
            var Toast = Swal.mixin({
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000
            });

            $('.swalDefaultSuccess').click(function () {
                Toast.fire({
                    icon: 'success',
                    title: 'Lorem ipsum dolor sit amet, consetetur sadipscing elitr.'
                })
            });


    </script>
}



