@model PrestaDinero.Core.DTOS.UpdateVale

<div class="content-wrapper">

    <section class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">

                </div>
                <div class="col-sm-6">

                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>


    <section class="content">
        <div class="container">
            <div class="row">
                <div class="col-12">

                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">Clientes</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">

                            <form asp-action="Update" asp-controller="Vale" method="post">

                                <input type="hidden" asp-for="IdVale">


                                <div class="card-body">
                                    <div class="form-group col-12 col-lg-6">
                                        <label asp-for="IdCliente" class="control-label"></label>
                                        <Select asp-for="IdCliente" class="form-control" asp-items="ViewBag.Clientes">
                                            <option>Seleccione una opcion ...</option>
                                        </Select>

                                        <span asp-validation-for="IdCliente" class="text-danger"></span>
                                    </div>

                                    <div class="form-group  col-12 col-lg-6">
                                        <label asp-for="FechaDisposicion" class="control-label"></label>
                                        <input asp-for="FechaDisposicion" type="date" class="form-control" />
                                        <span asp-validation-for="FechaDisposicion" class="text-danger"></span>
                                    </div>

                                </div>
                                <!-- /.card-body -->

                                <div class="card-footer text-right">

                                    <a asp-controller="Vale" asp-action="Index" class="btn btn-secondary">
                                        Regresar
                                    </a>
                                    <input type="submit" value="Guardar" class="btn btn-success swalDefaultSuccess">
                                </div>
                            </form>
                        </div>
                        <!-- /.card-body -->
                    </div>

                </div>
            </div>
        </div>
    </section>

</div>

